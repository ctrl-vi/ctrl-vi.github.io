---
import Layout from "./Layout.astro";
import "./MarkdownProjectLayout.css";


function formatDate(date : string) {
    if (date == null || date === "current") {
        return "current";
    }
    const dateObject = new Date(date);
    return (dateObject.getUTCMonth() + 1) + "/" + dateObject.getUTCFullYear();
}

const { frontmatter } = Astro.props;
const startDate = formatDate(frontmatter.startDate);
const finishDate = formatDate(frontmatter.finishDate);

const authors: string[] = frontmatter.article.authors;
const numAuthors = authors.length; 
const authorString = numAuthors == 1 ? 
    authors.toString() :
    authors.slice(0, numAuthors - 1).join(", ") + (numAuthors == 2 ? "" : ",") + " and " + authors[numAuthors - 1]; 
---
<Layout class="layout" pageTitle={frontmatter.title} ogType="article" article={frontmatter.article} ogDescription={frontmatter.description} seoDescription={frontmatter.seoDescription}>
<h1>{frontmatter.title}</h1>
<p class="date">{startDate} - {finishDate}</p>
<p><em>{frontmatter.description}</em></p>
<p>Written by: {authorString}</p>
<div class="md-slot">
<slot />
</div>
</Layout>